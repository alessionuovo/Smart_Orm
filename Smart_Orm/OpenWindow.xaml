        xmlns:local="clr-namespace:Smart_Orm" 
        xmlns:ui="clr-namespace:WpfExtensions;assembly=WpfExtensions"       
      WindowState="Maximized" WindowStartupLocation="CenterScreen"
       
        mc:Ignorable="d"
        Title="SmartOrm Model Wizard" Height="550" Width="450">
   
        
